// 背景
body {
  background-image:url(../images/bg.jpg);
  background-repeat:no-repeat;
  background-attachment:fixed;
  background-size:cover;
}

// 主页文章添加阴影效果
.posts-expand { 
	.post {
		margin-top: 30px;
		margin-bottom: 30px;
	  border-radius: 20px;
		-webkit-box-shadow: 5px 5px 20px rgba(119,118,118,.6);
		-moz-box-shadow: 5px 5px 20px rgba(119,118,118,.6);
	}
}

//主区域背景颜色与透明度设置
.main-inner {
  background: rgba(255,255,255,0.8);
  margin-top: 60px;
  padding: 20px 60px 60px 60px;
  min-height: 300px;
}

//侧边框背景颜色与透明度设置
.sidebar-inner {
  background: rgba(255,255,255,0);
}

//搜索框（local-search）背景颜色与透明度设置
.popup {
  opacity: 0.8;
}

//菜单栏背景、字体颜色与透明度设置
.header {
  background: transparent;
}

///网站标题
.brand{
  color: rgba(255,255,255,0.9);
  &:hover { 
      color: rgba(255,255,255,0.75);
      }
}

///标题下的两个横线
.logo-line {
  background: rgba(255,255,255,0.8);
  display: block;
  height: 2px;
  margin: 0 auto;
  width: 80%;
}

///菜单控件
a,
span.exturl {
  color: rgba(233,72,102,1);
}

.menu-item-active a,
.menu .menu-item a:hover,
.menu .menu-item span.exturl:hover {
  color: rgba(255,255,255,1);
  background: rgba(221,221,221,0.4);
}

.menu-item a.menu-item-active {
  background: rgba(221,221,221,0.65);
}

//底部栏
.footer {
  background: transparent;
  color: rgba(255,255,255,0.9);
  text-align: center;
  padding: 35px; 
}

.footer-inner {
  text-align: center;
}

.copyright {
  width: 100%;
  text-align: center;
}

//TOC目录默认展开两级
.post-toc .nav .nav-level-1>.nav-child {
  display: block;
}

// 文章内链接文本样式
.post-body a{
  color: #0593d3;
  border-bottom: none;
}

//文章末尾的“关注我”
.followme {
  align-items: center;
  background: #333;
  border-left: 3px solid #ff2a2a;
  color: #bbb;
}

// Archive部分
.posts-collapse .post {
    color: #222
}
.posts-collapse .post-content::before {
    background: #fdd4d4;
}
.posts-collapse .post-content::before {
    border-bottom: 1px dashed #ffb18f;
}
.posts-collapse .post-content .post-header::before {
    background: #ffb18f;
}
.posts-collapse .post-content .collection-title::before {
    background: rgb(252,100,35);
}
.posts-collapse .post-content .collection-year::before {
    background: #ffb18f;
    border: 1px solid #fff;
}

//图片阴影及放大时背景透明度改善

.medium-zoom-overlay {
  background: rgba(187,187,1,0.85);
}

img {
  box-shadow: 0px 0px 20px 0px #000;
  border-radius: 10px 10px 10px 10px
}

// 圆角计划
.header-inner {
  border-radius: 50px 50px 18px 18px;
}
.site-brand-container {
  border-radius: 18px 18px 0 0;
  +mobile() {
    border-radius: 18px;
  }
}
.sidebar-inner {
  border-radius: 18px;
}
.back-to-top {
  border-radius: 0 0 18px 18px;
}
.post-block {
  border-radius: 18px !important;
  margin-top: 18px;
}
.pagination {
  border-radius: 18px !important;
}
.comments {
  border-radius: 18px !important;
}